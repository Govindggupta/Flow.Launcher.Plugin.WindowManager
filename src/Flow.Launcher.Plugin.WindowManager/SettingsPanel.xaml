<UserControl
    x:Class="Flow.Launcher.Plugin.WindowManager.SettingsPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:viewModels="clr-namespace:Flow.Launcher.Plugin.WindowManager"
    d:DataContext="{d:DesignInstance Type=viewModels:Settings}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Margin="{StaticResource SettingPanelMargin}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Clear Keyword  -->
        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Margin="{StaticResource SettingPanelItemTopBottomMargin}"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Text="{DynamicResource flowlauncher_plugin_windowmanager_size_interval}" />
        <StackPanel
            Grid.Row="0"
            Grid.Column="1"
            Margin="{StaticResource SettingPanelItemLeftTopBottomMargin}"
            Orientation="Horizontal">
            <ui:NumberBox
                Width="120"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Maximum="99"
                Minimum="1"
                SmallChange="5"
                SpinButtonPlacementMode="Compact"
                ValidationMode="InvalidInputOverwritten"
                Value="{Binding SizeInterval, Mode=TwoWay}" />
            <TextBlock
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text="%" />
        </StackPanel>

        <!--  Seperator  -->
        <Separator
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Style="{StaticResource SettingPanelSeparatorStyle}" />

        <!--  Reasonable Size  -->
        <TextBlock
            Grid.Row="2"
            Grid.Column="0"
            Margin="{StaticResource SettingPanelItemTopBottomMargin}"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Text="{DynamicResource flowlauncher_plugin_windowmanager_reasonablesize_width}" />
        <StackPanel
            Grid.Row="2"
            Grid.Column="1"
            Margin="{StaticResource SettingPanelItemLeftTopBottomMargin}"
            Orientation="Horizontal">
            <ui:NumberBox
                Width="120"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Maximum="99"
                Minimum="1"
                SmallChange="5"
                SpinButtonPlacementMode="Compact"
                ValidationMode="InvalidInputOverwritten"
                Value="{Binding ReasonableSizeWidth, Mode=TwoWay}" />
            <TextBlock
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text="%" />
        </StackPanel>

        <TextBlock
            Grid.Row="3"
            Grid.Column="0"
            Margin="{StaticResource SettingPanelItemTopBottomMargin}"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Text="{DynamicResource flowlauncher_plugin_windowmanager_reasonablesize_height}" />
        <StackPanel
            Grid.Row="3"
            Grid.Column="1"
            Margin="{StaticResource SettingPanelItemLeftTopBottomMargin}"
            Orientation="Horizontal">
            <ui:NumberBox
                Width="120"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Maximum="99"
                Minimum="1"
                SmallChange="5"
                SpinButtonPlacementMode="Compact"
                ValidationMode="InvalidInputOverwritten"
                Value="{Binding ReasonableSizeHeight, Mode=TwoWay}" />
            <TextBlock
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text="%" />
        </StackPanel>

    </Grid>
</UserControl>